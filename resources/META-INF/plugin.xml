<idea-plugin>
    <id>com.youzan.mobile.enjoyplugin</id>
    <name>enjoymanager</name>
    <version>1.0.0</version>
    <vendor email="yyjiangchn@gmail.com" url="http://www.github.com/jyygithub/AutoGradle">
        http://www.github.com/jyygithub/AutoGradle
    </vendor>

    <description><![CDATA[
      <h1>AutoGradle</h1>
      <br/>
      <p>
      <b>
      <a href="https://github.com/jyygithub/AutoGradle">GitHub</a> |
      <a href="https://github.com/jyygithub/AutoGradle/issues">Issues</a> |
      </b>
      </p>
      <br/>
      <h2>A auto import gradle project plugin.</h2>
      <br/>
      <h2>Usage:</h2>
      <br/>
      <ul>
        <li>Ctrl + Alt + 5</li>
        <li>Tool -> AutoGradle</li>
        <li>Click the button below</li>
      </ul>
      <br/>
      <p><img src="https://github.com/jyygithub/AutoGradle/blob/master/img/plugin_toolbar.png" width="750" height="30" alt="toolbar_logo.png"/></p>
      <br/>
      <h2>The following figure is the operation interface</h2>
      <br/>
      <p><img src="https://github.com/jyygithub/AutoGradle/blob/master/img/plugin_main.png" width="750" height="370" alt="screenshots.png"/></p>
      <br/>
      <p><a href="https://github.com/jyygithub/AutoGradle/issues">Send feedback</a></p>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="EnjoyPlugin.Manager" class="com.youzan.mobile.enjoyplugin.action.ManagerAction"
                text="EnjoyManager" description="auto manager enjoydependence" icon="/icons/gradle.svg">
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>